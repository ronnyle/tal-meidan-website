{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve Jekyll Site",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*Configuration file:",
                    "endsPattern": "^\\s*Auto-regeneration:"
                }
            }
        }
    ]
}